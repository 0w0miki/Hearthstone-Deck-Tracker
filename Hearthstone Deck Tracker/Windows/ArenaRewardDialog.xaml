<controls:MetroWindow x:Class="Hearthstone_Deck_Tracker.Windows.ArenaRewardDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:stats="clr-namespace:Hearthstone_Deck_Tracker.Controls.Stats"
        Title="Arena Rewards" Height="390" Width="300" Topmost="True" WindowStyle="ToolWindow" ResizeMode="NoResize"
        BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="1">
    <StackPanel>
        <stats:ArenaRewards x:Name="ArenaRewards"/>
        <Button Style="{DynamicResource AccentedSquareButtonStyle}" Margin="10" Content="Save" Click="ButtonSave_OnClick"/>
    </StackPanel>
</controls:MetroWindow>
