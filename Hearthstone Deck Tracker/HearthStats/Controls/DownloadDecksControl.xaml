<UserControl x:Class="Hearthstone_Deck_Tracker.HearthStats.Controls.DownloadDecksControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <GroupBox Header="Decks found on HearthStats"  Margin="2" Width="300" >
        <DockPanel>
            <DockPanel DockPanel.Dock="Bottom" Margin="0,6,0,6">
                <Button Content="CANCEL" Width="80" DockPanel.Dock="Right" Margin="6,0,0,0" Click="ButtonCancel_OnClick"/>
                <Button Content="SYNC" Click="Button_Click"/>
            </DockPanel>
            <ListView Name="ListViewHearthStats" BorderThickness="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <Button Name="BtnDeleteRemoteDeck" DockPanel.Dock="Right" Content="DELETE" Background="Red" Click="BtnDeleteRemoteDeck_OnClick"/>
                            <TextBlock Text="{Binding Name}"/>
                        </DockPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>
    </GroupBox>
</UserControl>
