<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.Options.Tracker.TrackerReplays"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:enums="clr-namespace:Hearthstone_Deck_Tracker.HsReplay.Enums"
             xmlns:hsReplay="clr-namespace:Hearthstone_Deck_Tracker.HsReplay"
             xmlns:options="clr-namespace:Hearthstone_Deck_Tracker.FlyoutControls.Options"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <UserControl.Resources>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="PrivacyDataProvider">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="enums:Privacy" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <hsReplay:HsReplayUtil x:Key="HsReplayUtil"/>
    </UserControl.Resources>
    <GroupBox Header="REPLAYS">
        <StackPanel>
            <GroupBox Header="HSREPLAY.NET">
                <StackPanel>
                    <CheckBox Content="Upload replays automatically" Margin="5,5,0,0" IsChecked="{Binding HsReplayAutoUpload, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Ranked" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadRanked, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Casual" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadCasual, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Arena" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadArena, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Brawl" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadBrawl, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Friendly" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadFriendly, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Adventure/Practice" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadPractice, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Spectator" Margin="25,5,0,0" IsChecked="{Binding HsReplayUploadSpectator, Source={StaticResource ConfigWrapper}}"/>
                    <CheckBox Content="Make uploaded replays public" Margin="5,5,0,0" IsChecked="{Binding Path=HsReplayUploadPublic, Source={StaticResource ConfigWrapper}}"/>
                    <Separator Margin="0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Account Status:"/>
                        <Label Content="{Binding AccountStatus, Source={StaticResource HsReplayUtil}}"/>
                        <TextBlock VerticalAlignment="Center" Visibility="{Binding AccountNameVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                   Text="{Binding AccountName, Source={StaticResource HsReplayUtil}, StringFormat={}({0})}"/>
                    </StackPanel>
                    <Button Content="Claim Account" Visibility="{Binding TextClaimVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    <Label Content="Some text about claiming..." Visibility="{Binding TextClaimVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </GroupBox>
            <CheckBox Content="Use local replay viewer by default (not maintained)" Margin="5,5,0,0"
                              IsChecked="{Binding ForceLocalReplayViewer, Source={StaticResource ConfigWrapper}}"
                              Foreground="{Binding Color, Source={x:Static options:AdvancedOptions.Instance}}"
                              Visibility="{Binding Visibility, Source={x:Static options:AdvancedOptions.Instance}}" />
        </StackPanel>
    </GroupBox>
</UserControl>
