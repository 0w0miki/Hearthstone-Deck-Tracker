<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.Options.Tracker.TrackerPlugins"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>
        <GroupBox Header="Plugins">
            <DockPanel>
                <DockPanel DockPanel.Dock="Right" Width="150" Margin="5,0,0,0">
                    <TextBlock Text="{Binding ElementName=ListBoxPlugins, Path=SelectedItem.Name}" DockPanel.Dock="Top" TextWrapping="Wrap"/>
                    <Button Name="ButtonSettings" Content="Settings" DockPanel.Dock="Bottom" Click="ButtonSettings_OnClick"/>
                    <TextBlock Name="TextBlockDescription" Text="{Binding ElementName=ListBoxPlugins, Path=SelectedItem.Plugin.Description}" TextWrapping="Wrap"/>
                </DockPanel>
                <DockPanel DockPanel.Dock="Right" Margin="5,0,0,0">
                    <Button Content="Reload Plugins" Name="ButtonReloadPlugins" DockPanel.Dock="Bottom" Margin="0,5,0,0" Click="ButtonReloadPlugins_OnClick"/>
                    <ListBox Name="ListBoxPlugins" SelectionChanged="ListBoxPlugins_OnSelectionChanged" SelectionMode="Single">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox Content="{Binding Path=Plugin.Name}" IsChecked="{Binding Path=IsEnabled}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
