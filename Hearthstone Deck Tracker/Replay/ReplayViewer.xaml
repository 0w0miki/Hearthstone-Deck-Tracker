<Window x:Class="Hearthstone_Deck_Tracker.Replay.ReplayViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:replay="clr-namespace:Hearthstone_Deck_Tracker.Replay"
        Title="ReplayViewer" Height="578" Width="1269">
    <Grid>
        <DockPanel>
            <StackPanel Width="250">
                <Button Content="Next" Name="BtnNext" Click="BtnNext_Click" ></Button>
                <!--<ListBox Name="ListBoxKeyPoints" Height="500" SelectionChanged="ListBoxKeyPoints_OnSelectionChanged"></ListBox>-->
                <ScrollViewer Height="500">
                    <TreeView Name="TreeViewKeyPoints" SelectedItemChanged="TreeViewKeyPoints_OnSelectedItemChanged" />
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Horizontal">

                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Name" />
                            <Label Content="{Binding PlayerName}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Hero" />
                            <Label Content="{Binding PlayerHero}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Health" />
                            <Label Content="{Binding PlayerHealth}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Armor" />
                            <Label Content="{Binding PlayerArmor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Attack" />
                            <Label Content="{Binding PlayerAttack}" />
                        </StackPanel>
                    </StackPanel>
                    <ListBox Width="200" Height="200" ItemsSource="{Binding PlayerHand}" />
                </StackPanel>
                <ListBox Width="300" Height="150" ItemsSource="{Binding PlayerBoard}" />
                <ListBox Width="300" Height="150" ItemsSource="{Binding OpponentBoard}" />
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Name" />
                            <Label Content="{Binding OpponentName}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Hero" />
                            <Label Content="{Binding OpponentHero}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Health" />
                            <Label Content="{Binding OpponentHealth}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Armor" />
                            <Label Content="{Binding OpponentArmor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Attack" />
                            <Label Content="{Binding OpponentAttack}" />
                        </StackPanel>
                    </StackPanel>
                    <ListBox Width="200" Height="200" ItemsSource="{Binding OpponentHand}" />
                </StackPanel>
            </StackPanel>
        </DockPanel>


    </Grid>
</Window>