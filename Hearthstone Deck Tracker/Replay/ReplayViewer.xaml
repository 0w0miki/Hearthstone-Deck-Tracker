<controls1:MetroWindow x:Class="Hearthstone_Deck_Tracker.Replay.ReplayViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:replay="clr-namespace:Hearthstone_Deck_Tracker.Replay"
        xmlns:controls="clr-namespace:Hearthstone_Deck_Tracker.Replay.Controls"
        xmlns:controls1="http://metro.mahapps.com/winfx/xaml/controls"
        Title="ReplayViewer" Height="665" Width="1269">
    <Grid>
        <Line Name="AttackLine" Stroke="Red" StrokeThickness="4"/>
        <DockPanel>
            <DockPanel Width="250">
                <Button Content="Next" Name="BtnNext" Click="BtnNext_Click" DockPanel.Dock="Top"></Button>
                <ScrollViewer>
                    <TreeView Name="TreeViewKeyPoints" SelectedItemChanged="TreeViewKeyPoints_OnSelectedItemChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>
                </ScrollViewer>
            </DockPanel>
            <StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Name" />
                            <Label Content="{Binding OpponentName}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Hero" />
                            <Label Content="{Binding OpponentHero}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Health" />
                            <Label Content="{Binding OpponentHealth}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Armor" />
                            <Label Content="{Binding OpponentArmor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Attack" />
                            <Label Content="{Binding OpponentAttack}" />
                        </StackPanel>
                    </StackPanel>

                    <WrapPanel Width="700">
                        <controls:CardEntity x:Name="OpponentCardEntity0" DataContext="{Binding OpponentCard0}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity1" DataContext="{Binding OpponentCard1}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity2" DataContext="{Binding OpponentCard2}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity3" DataContext="{Binding OpponentCard3}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity4" DataContext="{Binding OpponentCard4}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity5" DataContext="{Binding OpponentCard5}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity6" DataContext="{Binding OpponentCard6}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity7" DataContext="{Binding OpponentCard7}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity8" DataContext="{Binding OpponentCard8}"/>
                        <controls:CardEntity x:Name="OpponentCardEntity9" DataContext="{Binding OpponentCard9}"/>
                    </WrapPanel>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Height="150" HorizontalAlignment="Center">
                    <controls:BoardEntity x:Name="OpponentBoardEntity0" DataContext="{Binding OpponentBoard0}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity1" DataContext="{Binding OpponentBoard1}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity2" DataContext="{Binding OpponentBoard2}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity3" DataContext="{Binding OpponentBoard3}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity4" DataContext="{Binding OpponentBoard4}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity5" DataContext="{Binding OpponentBoard5}"/>
                    <controls:BoardEntity x:Name="OpponentBoardEntity6" DataContext="{Binding OpponentBoard6}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Height="150" HorizontalAlignment="Center">
                    <controls:BoardEntity x:Name="PlayerBoardEntity0" DataContext="{Binding PlayerBoard0}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity1" DataContext="{Binding PlayerBoard1}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity2" DataContext="{Binding PlayerBoard2}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity3" DataContext="{Binding PlayerBoard3}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity4" DataContext="{Binding PlayerBoard4}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity5" DataContext="{Binding PlayerBoard5}"/>
                    <controls:BoardEntity x:Name="PlayerBoardEntity6" DataContext="{Binding PlayerBoard6}"/>
                </StackPanel>
                <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Orientation="Horizontal">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Name" />
                            <Label Content="{Binding PlayerName}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Hero" />
                            <Label Content="{Binding PlayerHero}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Health" />
                            <Label Content="{Binding PlayerHealth}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Armor" />
                            <Label Content="{Binding PlayerArmor}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Attack" />
                            <Label Content="{Binding PlayerAttack}" />
                        </StackPanel>
                    </StackPanel>
                    <WrapPanel Width="700">
                        <controls:CardEntity x:Name="PlayerCardEntity0" DataContext="{Binding PlayerCard0}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity1" DataContext="{Binding PlayerCard1}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity2" DataContext="{Binding PlayerCard2}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity3" DataContext="{Binding PlayerCard3}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity4" DataContext="{Binding PlayerCard4}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity5" DataContext="{Binding PlayerCard5}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity6" DataContext="{Binding PlayerCard6}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity7" DataContext="{Binding PlayerCard7}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity8" DataContext="{Binding PlayerCard8}"/>
                        <controls:CardEntity x:Name="PlayerCardEntity9" DataContext="{Binding PlayerCard9}"/>
                    </WrapPanel>
                </StackPanel>
            </StackPanel>
        </DockPanel>


    </Grid>
</controls1:MetroWindow>