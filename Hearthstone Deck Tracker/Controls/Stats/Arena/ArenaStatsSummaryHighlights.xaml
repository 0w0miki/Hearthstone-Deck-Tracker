<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Stats.Arena.ArenaStatsSummaryHighlights"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:stats="clr-namespace:Hearthstone_Deck_Tracker.Stats"
             xmlns:arena="clr-namespace:Hearthstone_Deck_Tracker.Controls.Stats.Arena"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Expander MinWidth="280">
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="BEST" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% winrate">
                                <Binding Path="ArenaBestClass.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaBestClass.WinRatePercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaBestClass, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander MinWidth="280">
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="WORST" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% winrate">
                                <Binding Path="ArenaWorstClass.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaWorstClass.WinRatePercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaWorstClass, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander MinWidth="280">
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="MOST PICKED" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% picked">
                                <Binding Path="ArenaMostPickedClass.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaMostPickedClass.PickedPercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaMostPickedClass, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander MinWidth="280">
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="LEAST PICKED" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% picked">
                                <Binding Path="ArenaLeastPickedClass.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaLeastPickedClass.PickedPercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaLeastPickedClass, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
    </StackPanel>
</UserControl>
