<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Stats.Arena.ArenaStatsSummaryHighlights"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:stats="clr-namespace:Hearthstone_Deck_Tracker.Stats"
             xmlns:arena="clr-namespace:Hearthstone_Deck_Tracker.Controls.Stats.Arena"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Expander IsExpanded="True">
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="BEST" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% win rate" FallbackValue="None">
                                <Binding Path="ArenaClassStatsBest.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaClassStatsBest.WinRatePercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsBest, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander>
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="WORST" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% win rate" FallbackValue="None">
                                <Binding Path="ArenaClassStatsWorst.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaClassStatsWorst.WinRatePercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsWorst, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander>
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="MOST PICKED" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% picked" FallbackValue="None">
                                <Binding Path="ArenaClassStatsMostPicked.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaClassStatsMostPicked.PickedPercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsMostPicked, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
        <Expander>
            <Expander.Header>
                <DockPanel>
                    <TextBlock Foreground="White" Text="LEAST PICKED" DockPanel.Dock="Left"/>
                    <TextBlock Foreground="White" Margin="0,0,10,0" HorizontalAlignment="Right">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} | {1}% picked" FallbackValue="None">
                                <Binding Path="ArenaClassStatsLeastPicked.Class" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                                <Binding Path="ArenaClassStatsLeastPicked.PickedPercent" Source="{x:Static stats:CompiledStats.Instance}" IsAsync="True"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DockPanel>
            </Expander.Header>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsLeastPicked, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </Expander>
    </StackPanel>
</UserControl>
