<UserControl x:Class="Hearthstone_Deck_Tracker.Controls.Stats.Arena.ArenaStatsSummaryHighlights"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:stats="clr-namespace:Hearthstone_Deck_Tracker.Stats"
             xmlns:arena="clr-namespace:Hearthstone_Deck_Tracker.Controls.Stats.Arena"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600">
    <StackPanel Orientation="Horizontal">
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Total" FontSize="16" Margin="10,0,0,0"/>
            <DockPanel>
                <Grid Margin="5,0,10,0" VerticalAlignment="Center">
                    <Rectangle Width="48" Height="48">
                        <Rectangle.Fill>
                            <VisualBrush Visual="{StaticResource hdticon}"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Ellipse Width="22" Height="22" Fill="White"/>
                    <Rectangle Width="44" Height="44">
                        <Rectangle.Fill>
                            <VisualBrush Visual="{StaticResource hdticon_black}"/>
                        </Rectangle.Fill>
                    </Rectangle>
                </Grid>
                <arena:ArenaClassStats ImageVisiblity="Collapsed" DataContext="{Binding Path=ArenaAllClasses, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}" Margin="0,0,-63,0"/>
            </DockPanel>
        </DockPanel>
        <Rectangle Height="Auto" Width="1" Fill="{DynamicResource TextBrush}"/>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Best" FontSize="16" Margin="10,0,0,0"/>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsBest, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </DockPanel>
        <Rectangle Height="Auto" Width="1" Fill="{DynamicResource TextBrush}"/>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Worst" FontSize="16" Margin="10,0,0,0"/>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsWorst, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </DockPanel>
        <Rectangle Height="Auto" Width="1" Fill="{DynamicResource TextBrush}"/>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Most picked" FontSize="16" Margin="10,0,0,0"/>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsMostPicked, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </DockPanel>
        <Rectangle Height="Auto" Width="1" Fill="{DynamicResource TextBrush}"/>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="Least picked" FontSize="16" Margin="10,0,0,0"/>
            <arena:ArenaClassStats DataContext="{Binding Path=ArenaClassStatsLeastPicked, Source={x:Static stats:CompiledStats.Instance}, IsAsync=True}"/>
        </DockPanel>
    </StackPanel>
</UserControl>
